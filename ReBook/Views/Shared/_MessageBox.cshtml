@model MessageBoxVM

<div class="modal-header">
    <h5 class="modal-title text-info">@Model.Title</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>
<div class="modal-body pb-0">
    <div class="">
        <div class="form-group row pl-2 pr-2">
            @if (@Model.Error is true)
            {
                <h5 class="w-100 pt-4 pb-4 text-danger">@Model.Message</h5>
            }
            else
            {
                <h5 class="text-center text-secondary w-100 pt-4 pb-4">@Model.Message</h5>
            }
        </div>
        <div class="form-group row pl-2 pr-2">
            @if (Model.OnClick is null)
            {
                <a href="#" class="btn btn-info btn-block" data-dismiss="modal">@Model.Button</a>
            }
            else
            {
                <a href=""
                   data-ajax="true"
                   data-ajax-method="get"
                   data-ajax-url=@Model.OnClick
                   data-ajax-update="#main-modal-content"
                   data-ajax-error="onError"
                   class="btn btn-success btn-block">
                    @Model.Button
                </a>
            }
        </div>
    </div>
</div>




