@model NotificationIndexVM

@{
    <partial name="_ValidationScriptsPartial" />
}

<div class="modal-header">
    <h5 class="modal-title text-info">@Model.PageTitle</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>
<div class="modal-body">

    @if (Model == null || Model.Notifications == null || Model.Notifications.Count == 0)
    {
        <h6 class="w-100 text-center">You don't have any unread notifications.</h6>
    }
    else
    {
        @foreach (var notification in Model.Notifications)
        {
            switch (notification.Type)
            {
                case NotiType.wish:
                    <partial name="../Notification/_WishNotification" model=notification />
                    break;
                case NotiType.match:
                    <partial name="../Notification/_MatchNotification" model=notification />
                    break;
                case NotiType.accepted:
                    <partial name="../Notification/_AcceptedMatchNotification" model=notification />
                    break;
                case NotiType.refused:
                    <partial name="../Notification/_RefusedMatchNotification" model=notification />
                    break;
                case NotiType.newtrade:
                    <partial name="../Notification/_NewTradeNotification" model=notification />
                    break;
                case NotiType.updateTrade:
                    <partial name="../Notification/_UpdateTradeNotification" model=notification />
                    break;
                case NotiType.newCopy:
                    <partial name="../Notification/_NewCopyNotification" model=notification />
                    break;
            }
        }
    }

</div>
