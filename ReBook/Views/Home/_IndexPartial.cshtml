@model EditionIndexVM

@if (Model != null && Model.Editions != null)
{
    @foreach (var obj in Model.Editions)
    {
        if (obj is not null)
        {
            <div class="col mb-4" id="@obj.ISBN">
                <div class="card text-center border-0" style="min-width:10em;">
                    <a href=""
           data-ajax="true"
           data-ajax-url="/Edition/_Details?isbn=@obj.ISBN&&repo=@Model.Query.Repo&&currentController=@Model.Query.CurrentController"
           data-ajax-method="get"
           data-ajax-begin="onBegin"
           data-ajax-update="#main-modal-content"
           data-ajax-error="onError"
           data-toggle="modal"
           data-target="#main-modal">
                        <img src=@obj.Cover class="img-thumbnail thumb-edition-create" />
                    </a>
                    <div class="card-body p-1">
                        <h6 class="card-title">
                            <a href=""
                   data-ajax="true"
                   data-ajax-url="/Edition/_Details?isbn=@obj.ISBN&&repo=@Model.Query.Repo&&currentController=@Model.Query.CurrentController"
                   data-ajax-method="get"
                   data-ajax-begin="onBegin"
                   data-ajax-update="#main-modal-content"
                   data-ajax-error="onError"
                   data-toggle="modal"
                   data-target="#main-modal">
                                @obj.Title
                            </a>
                        </h6>
                    </div>
                </div>
            </div>
        }
    }
    <div class="d-none tricky">
        <div id="read-more-embed" class=" read-more-embed d-none">

            @if (Model.Editions.Count > 0)
            {
                <partial name="../Home/_ReadMore" model="Model.Query" />
            }
        </div>
    </div>
}
else
{
    <div class="text-danger" style="width:100%; height:90vh; display:flex; justify-content:center; align-items:center;"><h1>Something Went Wrong.</h1></div>
}




