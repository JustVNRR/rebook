@model AddPasswordVM

<div class="modal-header">
    <h5 class="modal-title text-info">Update Password</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>
<div class="modal-body pt-0 pb-0">
    <form 
          data-ajax="true"
          data-ajax-method="post"
          data-ajax-begin="onBegin"
          data-ajax-url="/Account/_AddPassword"
          data-ajax-update="#main-modal-content"
          data-ajax-error="onError"
          autocomplete="off">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (@Model != null && @Model.Error != null)
        {
            <div class="form-group">
                <div asp-for="Error" class=" control-label pl-2 text-danger">@Model.Error</div>
            </div>
        }

        <div class="form-group text-secondary">
            You have used an external account to login and do not have a local username/password.
            Simply set a new password if you want to login using a local account. Use your email
            as the username.
        </div>
        <div class="form-group">
            <input asp-for="NewPassword" class="form-control" placeholder="New Password" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm New Password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group row pl-2 pr-2">
            <div class="col">
                <button type="submit" class="btn btn-block btn-info">Set Password</button>
            </div>
            <div class="col">
                <a 
                   data-ajax="true"
                   data-ajax-method="Get"
                   data-ajax-url="/Account/_UserPanelGet"
                   data-ajax-update="#main-modal-content"
                   class="btn btn-success w-100">
                    Cancel
                </a>
            </div>
        </div>
    </form>
</div>