@model ChangePasswordVM

<div class="modal-header">
    <h5 class="modal-title text-info">Update Password</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>
<div class="modal-body pt-0 pb-0">
    <form 
          data-ajax="true"
          data-ajax-method="post"
          data-ajax-begin="onBegin"
          data-ajax-url="/Account/_ChangePassword"
          data-ajax-update="#main-modal-content"
          data-ajax-error="onError">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (@Model != null && @Model.Error != null)
        {
            <div class="form-group">
                <div asp-for="Error" class=" control-label pl-2 text-danger">@Model.Error</div>
            </div>
        }
        <div class="form-group">
            <input asp-for="CurrentPassword" class="form-control" placeholder="Current Password" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="NewPassword" class="form-control" placeholder="New Password" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm New Password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group row pl-2 pr-2">
            <div class="col">
                <button type="submit" class="btn btn-block btn-info">Update</button>
            </div>
            <div class="col">
                <a href="#"
                   data-ajax="true"
                   data-ajax-method="Get"
                   data-ajax-url="/Account/_UserPanelGet"
                   data-ajax-update="#main-modal-content"
                   class="btn btn-success w-100">
                    Cancel
                </a>
            </div>
        </div>
    </form>
</div>