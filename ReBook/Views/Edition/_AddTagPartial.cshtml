@model EditionVM

@if (Model.Edition != null && Model.Edition.Book != null && Model.Edition.Book.Tags != null)
{
    for (int i = 0; i < Model.Edition.Book.Tags.Count; i++)
    {
        <input type="hidden" class="tag-index" value="@i" />
        <div class="form-group row pl-2 pr-2 single-tag-container">
            <div class="input-group">
                <label asp-for="Edition.Book.Tags[i].Name" class="input-group-text"></label>
                <div id="autocomplete-tag" class="form-control">
                    <input asp-for="Edition.Book.Tags[i].Name" class="autocomplete-input tag-name" placeholder="phylosophy... poetry... biography...  " onkeydown="autocompMe(event, this); preventEnter(event);" />
                </div>
                <div class="input-group-append remove-tag-btn-container">
                    <button class="btn btn-info w-100" onclick="removeTag(this); return false;"><i class="fas fa-minus mx-2"></i></button>
                </div>
            </div>
            <span asp-validation-for="Edition.Book.Tags[i].Name" class="text-danger"></span>
        </div>
    }
}

<div class="form-group row pl-2 pr-2">
    <button id="add-tag" class="btn btn-block btn-info w-100" onclick="addTag(this); return false;"><i class="fas fa-plus mx-2"></i><span style="font-family:sans-serif;">  Add Tag</span></button>
</div>
