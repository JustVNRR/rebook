@model ReBook.ViewModels.AdministrationVM.QueryUserVM
@{
    <partial name="_ValidationScriptsPartial" />
}
<div class="modal-header advanced-search">
    <h5 class="modal-title text-info">Advanced Search</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>
<div class="modal-body">
    <form method="get"
          data-ajax="true"
          data-ajax-method="get"
          data-ajax-begin="onFindAdvanced"
          data-ajax-success="replaceAndReadMore"
          data-ajax-error="onError"
          autocomplete="off"
          asp-action="_UsersIndexPartial"
          asp-controller="Administration">
        <div class="border p-3">
            <input asp-for="SearchContext" type="hidden" value="advanced" />
            <div class="form-group row pl-2 pr-2">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div id="autocomplete-title" class="form-group row pl-2 pr-2">
                <label asp-for="Pseudo" class="control-label"></label>
                <div id="autocomplete-title" class="form-control">
                    <input asp-for="Pseudo" class="autocomplete-input w-100" />
                </div>
                <span asp-validation-for="Pseudo" class="text-danger"></span>
            </div>
            <div id="autocomplete-author" class="form-group row pl-2 pr-2">
                <label asp-for="Login" class="control-label"></label>
                <div id="autocomplete-author" class="form-control">
                    <input asp-for="Login" class="autocomplete-input w-100" />
                </div>
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div id="autocomplete-editor" class="form-group row pl-2 pr-2">
                <label asp-for="Role" class="control-label"></label>
                <div id="autocomplete-editor" class="form-control">
                    <input asp-for="Role" class="autocomplete-input w-100" />
                </div>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group row pl-2 pr-2">
                <div class="col">
                    <input class="btn btn-info w-100" type="submit" value="Search" />
                </div>
                <div class="col">
                    <a href="#" class="btn btn-success w-100" data-dismiss="modal"><i class="fas fa-sign-out-alt"></i>Back</a>
                </div>
            </div>
        </div>
    </form>
</div>