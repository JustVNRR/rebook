@model ReBook.ViewModels.AdministrationVM.UsersInRoleVM

@{
    <partial name="_ValidationScriptsPartial" />
}

<div class="modal-header">
    <input id="usersRole" type="hidden" value="@Model.RoleName" />
    <h5 class="modal-title text-info" id="usersRoleModalLabel">@Model.PageTitle</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div id="usersRoleModalBody" class="modal-body">
    @if (Model.Error != null)
    {
        <div class="form-group row pl-2 pr-2">
            <label asp-for="Error" class=" control-label pl-2 text-danger">@Model.Error</label>
        </div>
    }
    <div class="form-group w-100">
        <table class="table table-bordered" style="width:100%">
            <tbody>
                @if (Model.Users.Any())
                {
                    @for (int i = 0; i < Model.Users.Count; i++)
                    {
                        <partial name="_UsersInRolePartial" , model="Model.Users[i]" />
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-info" onclick="usersRole(this); return false;" style="min-width:5em;">Edit</button>

    <a href=""
       data-ajax="true"
       data-ajax-url="/Administration/_Roles"
       data-ajax-method="get"
       data-ajax-success="replaceAndCallback"
       data-ajax-error="onError"
       style="min-width:5em;"
       class="btn btn-danger">Back</a>

</div>


